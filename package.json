{
    "name": "ms-base",
    "version": "0.0.1",
    "private": true,
    "license": "Apache-2.0",
    "scripts": {
        "git submodule update": "git submodule update --init --recursive && git submodule foreach --recursive git pull origin main",
        "yarn:workspace-tools": "yarn plugin import workspace-tools",
        "yarn:install": "yarn install",
        "yarn:add:package": "yarn workspace backend add tinkoff-invest-api",
        "yarn:switch:to:berry": "yarn set version berry",
        "yarn:switch:to:classic": "yarn set version classic",
        "yarn:build:all": "yarn install && yarn workspaces foreach run build",
        "yarn:clean": "yarn cache clean",
        "lint": "eslint --color --fix --ext .ts,.js,.jsx packages/backend/apps/ms-src/src",
        "lint-q": "eslint --color --fix --quiet --ext .ts,.js,.jsx packages/backend/apps/ms-cron/src",
        "test": "jest",
        "build:all": "yarn workspaces foreach run build",
        "api-ti-orders": "src/node_modules/.bin/ts-node -r tsconfig-paths/register apps/ms-atr/src/api.ti.orders.ts",
        "vault": "ts-node -r tsconfig-paths/register src/vault/vault.ts"
    },
    "dependencies": {
        "date-fns": "^2.29.3",
        "dotenv": "^16.0.3",
        "path": "^0.12.7",
        "telegraf": "^4.11.2",
        "ts-node": "^10.9.1",
        "tslib": "^2.4.1"
    },
    "devDependencies": {
        "@jest/types": "^29.3.1",
        "@types/node": "^18.11.18",
        "jest": "^29.3.1",
        "jest-ts-auto-mock": "^2.1.0",
        "ts-auto-mock": "^3.6.4",
        "ts-jest": "^29.0.5",
        "ttypescript": "^1.5.15",
        "typescript": "^4.7.4"
    },
    "packageManager": "yarn@3.3.1"
}
