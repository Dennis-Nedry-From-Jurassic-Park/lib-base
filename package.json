{
    "name": "lib-base",
    "version": "0.0.1",
    "private": true,
    "license": "Apache-2.0",
    "scripts": {
        "------------ git ------------": "------------ git ------------",
        "git submodule add lib-*": "git submodule add --force https://github.com/Dennis-Nedry-From-Jurassic-Park/lib-*.git shared/lib-*",
        "git submodule update": "git submodule update --init --recursive && git submodule foreach --recursive git pull origin main",
        "------------ pnpm ------------": "----------- pnpm ------------",
        "pnpm:add": "npx pnpm add -g pnpm",
        "pnpm:add:package": "npx pnpm add -w date-fns-tz",
        "pnpm:setup": "npx pnpm setup",
        "pnpm:update": "npx pnpm add -g pnpm",
        "pnpm:install": "npx pnpm install",
        "----------- docker -----------": "----------- docker -----------",
        "yarn:build:all": "yarn install && yarn workspaces foreach run build",
        "lint": "eslint --color --fix --ext .ts,.js,.jsx packages/backend/apps/ms-src/src",
        "lint-q": "eslint --color --fix --quiet --ext .ts,.js,.jsx packages/backend/apps/ms-cron/src",
        "test": "jest",
        "build": "tsc -b .",
        "build:all": "yarn workspaces foreach run build",
        "api-ti-orders": "src/node_modules/.bin/ts-node -r tsconfig-paths/register apps/ms-atr/src/api.ti.orders.ts",
        "check": "ts-node -r tsconfig-paths/register src/datetime/dt.ts",
        "vault": "ts-node -r tsconfig-paths/register src/vault/vault.ts",
        "main": "ts-node -r tsconfig-paths/register src/main.ts"
    },
    "dependencies": {
        "axios": "^1.3.4",
        "date-fns": "^2.29.3",
        "date-fns-tz": "^2.0.0",
        "dotenv": "^16.0.3",
        "path": "^0.12.7",
        "pino": "8.10.0",
        "safe-stable-stringify": "2.4.1",
        "telegraf": "^4.11.2",
        "ts-node": "^10.9.1",
        "tslib": "^2.4.1"
    },
    "devDependencies": {
        "@jest/types": "29.4.2",
        "ttypescript": "^1.5.15",
        "typescript": "^4.7.4",
        "@types/jest": "29.4.0",
        "@types/node": "^18.11.18",
        "jest": "29.4.2",
        "jest-ts-auto-mock": "^2.1.0",
        "ts-auto-mock": "^3.6.4",
        "ts-jest": "^29.0.5",
        "tsconfig-paths": "^4.1.2"
    },
    "packageManager": "^pnpm@7.26.3"
}
